<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
        >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_x="0dp"
		android:layout_y="291dp"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/current_music"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:cacheColorHint="#00000000"
			android:padding="10dip"
			android:text="thisr"
			android:textColor="#ffffff"
			android:textSize="16sp" />
	</LinearLayout>

	<Gallery
		android:id="@+id/gallery"
		android:layout_width="fill_parent"
		android:layout_height="200dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_x="0dp"
		android:layout_y="48dp"
		android:cacheColorHint="#00000000"
		android:spacing="16dp" />

	<SeekBar
		android:id="@+id/seekbar"
		android:layout_width="291dp"
		android:layout_height="20px"
		android:layout_x="24dp"
		android:layout_y="374dp"
		android:max="100"
		android:paddingLeft="18px"
		android:paddingTop="5px"
		android:paddingRight="15px"
		android:paddingBottom="5px"
		android:progress="0"
		android:progressDrawable="@drawable/seekbar"
		android:secondaryProgress="0"
		android:thumb="@drawable/thumb" />


	<TextView
		android:id="@+id/current_time_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_x="26dp"
		android:layout_y="402dp"
		android:text="00:00"></TextView>

	<TextView
		android:id="@+id/end_Time_Text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_x="277dp"
		android:layout_y="402dp"
		android:text="00:00"></TextView>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"

		android:layout_x="0dp"
		android:layout_y="572dp"
		android:background="@drawable/buttonground"
		android:gravity="center"
		android:orientation="horizontal" />
   			
   			 <!-- 建立第一個ImageButton -->
	<ImageButton
		android:id="@+id/btStart"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_x="143dp"
		android:layout_y="498dp"
		android:background="#00000000"
		android:src="@drawable/play" />
  <!-- 建立第二個ImageButton  
  <ImageButton
  android:id="@+id/pause" 
  android:layout_height="wrap_content"  
  android:layout_width="wrap_content"
 android:background="#00000000"
  android:layout_x="141px"
  android:layout_y="50px"  
  android:src="@drawable/pause" 
  />
 -->
  <!-- 建立第三個ImageButton -->
	<ImageButton
		android:id="@+id/before"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_x="72dp"
		android:layout_y="429dp"
		android:background="#00000000"
		android:src="@drawable/backward" />
  <!-- 建立第四個ImageButton -->
	<ImageButton
		android:id="@+id/next"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_x="215dp"
		android:layout_y="430dp"
		android:background="#00000000"
		android:src="@drawable/forward" />
  <!-- 建立第五個ImageButton -->
	<ImageButton
		android:id="@+id/btStop"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_x="142dp"
		android:layout_y="429dp"
		android:background="#00000000"
		android:src="@drawable/stop" />


	<ImageButton
		android:id="@+id/listplay"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_x="70dp"
		android:layout_y="498dp"
		android:background="#00000000"
		android:cacheColorHint="#00000000"
		android:src="@drawable/itunes2" />
  <!-- 
  <ImageButton
  android:id="@+id/player" 
  android:layout_height="70dp"  
  android:layout_width="70dp"
 android:cacheColorHint="#00000000"
  android:layout_x="140px"
  android:layout_y="390px"  
   android:background="#00000000"
  android:src="@drawable/wmp2" />
   -->
	<ImageButton
		android:id="@+id/returnBt"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_x="214dp"
		android:layout_y="497dp"
		android:background="#00000000"
		android:cacheColorHint="#00000000"
		android:src="@drawable/white" />

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_x="0dp"
		android:layout_y="257dp"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/lrcText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#8deeee">

		</TextView>

	</LinearLayout>
</AbsoluteLayout>